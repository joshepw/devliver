{% extends 'profile/base.html.twig' %}


{% block profile %}
    <h3>Your repository token</h3>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user-secret"></i> </span>
        </div>
        <input type="text" readonly class="form-control text-center" value="{{ user.repositoryToken }}"/>
    </div>
    <p>With this Repository-Token you have direct access to this repository.</p>

{% endblock %}
